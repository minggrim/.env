[user]
	name = liam.liao
	mail = liam.liao@latticeworkinc.com
	email = liam.liao@latticeworkinc.com
[http]
	sslVerify = false
[core]
	editor = vim
[merge]
	tool = bc
[alias]
    co = checkout
    cp = cherry-pick
    cm = commit
    di = diff
    st = status
    br = branch --sort=committerdate -v
    re = remote
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    slg = log --pretty=oneline
    al = config --get-regexp alias
[push]
	default = simple
[diff]
	tool = bcompare
[difftool]
	prompt = false
[merge "tool"]
	bc = trustExitCode
[diff "tool"]
	bc = trustExitCode
[difftool "bc3"]
	trustExitCode = true
[color "status"]
added = green
    changed = yellow
    untracked = white
    deleted = green
    unmerged = bold yellow
[color "diff"]
added = green
    changed = yellow
    deleted = green
